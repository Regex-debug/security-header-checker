{
  "manifest_version": 2,
  "name": "Security Header Checker",
  "version": "1.0",
  "description": "Check websites for missing security headers.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}
